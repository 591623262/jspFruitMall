<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xgbb.mapper.CommentMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="xgbb.entity.Comment">
        <id column="comment_id" property="commentId" />
        <result column="comment_score" property="commentScore" />
        <result column="comment_time" property="commentTime" />
        <result column="comment_user_id" property="commentUserId" />
        <result column="comment_commodity_id" property="commentCommodityId" />
        <result column="comment_order_id" property="commentOrderId" />
        <result column="comment_content" property="commentContent" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        comment_id, comment_score, comment_time, comment_user_id, comment_commodity_id, comment_order_id, comment_content
    </sql>

</mapper>
